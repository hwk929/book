#!/usr/bin/env bash

# Wrapper script for i3lock-color
#  Based on the dracula theme

font="sans-serif"

bg="1e2029"
fg="f8f8f2"
primary="bd93f9"

green="50fa7b"
red="ff5555"

i3lock \
    --clock \
    --indicator \
    --color="$bg" \
    --inside-color="$bg" \
    --ring-color="$primary" \
    --insidever-color="$bg" \
    --ringver-color="6272a4" \
    --insidewrong-color="$bg" \
    --ringwrong-color="$red" \
    --line-color="000000ee" \
    --keyhl-color="$green" \
    --bshl-color="$red" \
    --separator-color="$primary" \
    --verif-color="$fg" \
    --wrong-color="$fg" \
    --modif-color="$fg" \
    --layout-color="$fg" \
    --time-color="$fg" \
    --date-color="$fg" \
    --greeter-color="$fg" \
    --time-str="%l:%M%P" \
    --date-str="%A, %e/%m/%Y" \
    --radius="125" \
    --verif-text="..." \
    --wrong-text="Try again" \
    --noinput-text=":(" \
    --time-font="$font" \
    --date-font="$font" \
    --layout-font="$font" \
    --verif-font="$font" \
    --wrong-font="$font" \
    --greeter-font="$font" \
    -p default
