#!/usr/bin/env bash

# Screen layout for my TV with two monitors
# Generated by arandr

xrandr --output DisplayPort-0 --off --output DisplayPort-1 --mode 1920x1080 --pos 0x1170 --rotate normal --output DisplayPort-2 --mode 1680x1050 --pos 1920x0 --rotate normal --output HDMI-A-0 --primary --mode 1920x1080 --pos 1920x1050 --rotate normal --output DVI-D-0 --off
